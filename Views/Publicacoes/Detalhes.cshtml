@model Postagens.NET.Models.Publicacao

@{
    ViewData["Title"] = "Detalhes da Publicação";
}

<h1>@ViewData["Title"]</h1>

<div class="card mb-4">
    @if (!string.IsNullOrEmpty(Model.Imagem))
    {
        <img src="@Model.Imagem" class="card-img-top" alt="Imagem da Publicação" style="max-height: 300px; object-fit: cover;" />
    }
    else
    {
        <img src="/imagens/padrao.png" class="card-img-top" alt="Imagem padrão" style="max-height: 300px; object-fit: cover;" />
    }

    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.Titulo)</h5>
        <p class="card-text">@Html.DisplayFor(model => model.Conteudo)</p>
        <p class="card-text"><small class="text-muted">Publicado em: @Html.DisplayFor(model => model.DataPublicacao)</small></p>
        <p class="card-text">Categoria: @Html.DisplayFor(model => model.Categoria.Nome)</p>

        <div>
            <strong>Tags:</strong>
            @if (Model.PublicacaoTags != null && Model.PublicacaoTags.Any())
            {
                <ul>
                    @foreach (var pubTag in Model.PublicacaoTags)
                    {
                        <li>@pubTag.Tag.Nome</li>
                    }
                </ul>
            }
            else
            {
                <span>Sem Tags</span>
            }
        </div>

        <div class="mt-3">
            <a class="btn btn-warning" asp-action="Cadastro" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </div>
    </div>
</div>
